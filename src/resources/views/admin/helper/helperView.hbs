<!-- char-area -->
<section class="message-area">
    <div class="container">
        <div class="row">
            <div class="col-12 p-0">
                <div class="chat-area">
                    <!-- chatlist -->
                    <div class="chatlist">
                        <div class="modal-dialog-scrollable">
                            <div class="modal-content">
                                <div class="chat-header">
                                    <div class="msg-search">
                                        <input type="text" class="form-control m-2" id="inlineFormInputGroup"
                                            placeholder="Search" aria-label="search">
                                    </div>
                                </div>

                                <div class="modal-body">
                                    <!-- chat-list -->
                                    <div class="chat-lists">
                                        <div class="tab-content" id="myTabContent">
                                            <div class="tab-pane fade show active" id="Open" role="tabpanel"
                                                aria-labelledby="Open-tab">
                                                <!-- chat-list -->
                                                <div class="chat-list" id="chat-list">



                                                </div>
                                                <!-- chat-list -->
                                            </div>
                                        </div>

                                    </div>
                                    <!-- chat-list -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- chatlist -->
                    <!-- chatbox -->
                    <div class="chatbox" style="display: none;">
                        <div class="modal-dialog-scrollable">
                            <div class="modal-content">
                                <div class="msg-head">
                                    <div class="row">
                                        <div class="col-8">
                                            <div class="d-flex align-items-center">
                                                <span class="chat-icon"><img src="/imgs/icons/back_arrow.png"
                                                        alt="image title"></span>
                                                <div class="flex-shrink-0">
                                                    <img class="img-fluid" src="/imgs/icons/user_default.png"
                                                        alt="user img">
                                                </div>
                                                <div class="flex-grow-1 ms-3">
                                                    <h3 id="nameUser"></h3>
                                                    <p id="createDate"></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="modal-body" id="chatbox-body">
                                    <div class="msg-body" style="min-height: 50vh;">
                                        <ul>

                                        </ul>
                                    </div>
                                </div>

                                <div class="send-box">
                                    <form id="frm_sendChat">
                                        <input type="text" id="roomIDAdmin" name="roomIDAdmin" hidden>
                                        <input type="text" class="form-control" name="message" aria-label="message…"
                                            placeholder="Write message…">

                                        <button type="submit"><i class="fa fa-paper-plane" aria-hidden="true"></i>
                                            Send</button>
                                    </form>

                                    <div class="send-btns">
                                        <div class="attach">
                                            <div class="button-wrapper">
                                                <label for="attachmentfiles" class="label" style="cursor: pointer;">
                                                    attached
                                                    file
                                                </label><input type="file" name="upload" id="attachmentfiles" multiple
                                                    hidden class="upload-box" placeholder="Upload File"
                                                    aria-label="Upload File">
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- chatbox -->
            </div>
        </div>
    </div>
</section>
<!-- char-area -->